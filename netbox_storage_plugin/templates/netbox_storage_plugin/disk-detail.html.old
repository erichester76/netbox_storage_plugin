{% extends 'base/object.html' %}

{% block title %}{{ object.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>{{ object.name }}</h2>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <td>{{ object.name }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ object.description|linebreaks|default:"No description" }}</td>
                    </tr>
                    <tr>
                        <th>Size</th>
                        <td>{{ object.size|filesizeformat|default:"N/A" }}</td>
                    </tr>
                    <tr>
                        <th>Interface</th>
                        <td>{{ object.get_interface_display }}</td>
                    </tr>
                    <tr>
                        <th>Speed</th>
                        <td>{{ object.get_speed_display }}</td>
                    </tr>
                    <tr>
                        <th>Part Number</th>
                        <td>{{ object.part_number|default:"N/A" }}</td>
                    </tr>
                    <tr>
                        <th>Serial Number</th>
                        <td>{{ object.serial_number|default:"N/A" }}</td>
                    </tr>
                    <tr>
                        <th>Firmware Version</th>
                        <td>{{ object.firmware_version|default:"N/A" }}</td>
                    </tr>
                    <tr>
                        <th>WWN</th>
                        <td>{{ object.wwn|default:"N/A" }}</td>
                    </tr>
                    <tr>
                        <th>Associated Object</th>
                        <td>
                            {% if object.associated_object %}
                                <a href="{{ object.associated_object.get_absolute_url }}">
                                    {{ object.associated_object }}
                                </a>
                            {% else %}
                                N/A
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}